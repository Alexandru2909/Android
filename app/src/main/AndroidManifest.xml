<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.labapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:required="true"/>
    <uses-permission android:name="android.permissionACCESS_BACKGROUND_LOCATION"
        android:required="true"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA"
        android:required="true"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true"/>
    <uses-feature android:name="android.hardware.camera2.full"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".takePhoto"></activity>
        <activity
            android:name=".NearYou"
            android:label="@string/title_activity_near_you"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddCar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>